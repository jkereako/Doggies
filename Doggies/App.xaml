<?xml version="1.0" encoding="utf-8"?>
<Application
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Doggies.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style
                x:Key="TextStyle"
                TargetType="Label">
                <Setter
                    Property="TextColor"
                    Value="White" />
                <Setter
                    Property="Label.FontFamily">
                    <Setter.Value>
                        <OnPlatform
                            x:TypeArguments="x:String">
                            <On
                                Platform="iOS"
                                Value="SF UI Text" />
                        </OnPlatform>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>